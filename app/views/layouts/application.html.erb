<!DOCTYPE html>
<html>
<head>
  <title>PrimeVendor</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class ="bg-1">
<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <%= link_to "PrimeVendor",root_path, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
	    	<li id = "welcome"><%= link_to "Welcome #{current_user.email}!", userprofile_userprofile_path%></li>
	      	<li><%= link_to "Sell",new_post_path %></li>
	     	<li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
	      <% else %>
	      	<li><%= link_to "Sign In", new_user_session_path %></li>
	      	<li><%= link_to "Sign Up", new_user_registration_path%></li>
	      <% end %>
	      <li><%= link_to "About", userprofile_about_path %></li>
      </ul>
    </div>
  </div>
</nav>
<% if notice %>
	<div>
		<p class="notice"><%= notice %></p>
	</div>
	<% end %>
	<% if alert %>
	<div>
		<p class="alert"><%= alert %></p>	
	</div>
	<% end %>
<%= yield %>
<script>
$(document).ready(function(){
  setTimeout(function(){
    $("#notice").fadeOut("slow",function(){
      $("this").remove();
    })
  },1000);
});

</script>




</body>



</html>
